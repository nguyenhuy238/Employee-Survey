@model Employee_Survey.Domain.Test
<h2>Create Test</h2>
<form method="post">
    <div class="mb-2"><label>Title</label><input name="Title" class="form-control" /></div>
    <div class="mb-2"><label>DurationMinutes</label><input name="DurationMinutes" type="number" value="10" class="form-control" /></div>
    <div class="mb-2"><label>PassScore</label><input name="PassScore" type="number" value="3" class="form-control" /></div>
    <div class="mb-2"><label>SkillFilter</label><input name="SkillFilter" value="ASP.NET" class="form-control" /></div>
    <div class="mb-2"><label>RandomMCQ</label><input name="RandomMCQ" type="number" value="2" class="form-control" /></div>
    <div class="mb-2"><label>RandomTF</label><input name="RandomTF" type="number" value="1" class="form-control" /></div>
    <div class="mb-2"><label>RandomEssay</label><input name="RandomEssay" type="number" value="0" class="form-control" /></div>
    <button class="btn btn-primary">Save</button>
</form>
<div class="text-danger">@Html.ValidationSummary()</div>
