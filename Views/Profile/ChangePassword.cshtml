@model Employee_Survey.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<h2>Đổi mật khẩu</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">Vui lòng kiểm tra các lỗi bên dưới.</div>
}

<form asp-action="ChangePassword" asp-controller="Profile" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="UserId" />

    <div class="mb-3">
        <label asp-for="OldPassword" class="form-label"></label>
        <input asp-for="OldPassword" class="form-control" />
        <span class="text-danger" asp-validation-for="OldPassword"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NewPassword" class="form-label"></label>
        <input asp-for="NewPassword" class="form-control" />
        <span class="text-danger" asp-validation-for="NewPassword"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ConfirmNewPassword" class="form-label"></label>
        <input asp-for="ConfirmNewPassword" class="form-control" />
        <span class="text-danger" asp-validation-for="ConfirmNewPassword"></span>
    </div>

    <button type="submit" class="btn btn-primary">Đổi mật khẩu</button>
    <a class="btn btn-outline-secondary" asp-action="Edit" asp-controller="Profile">Quay lại hồ sơ</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
